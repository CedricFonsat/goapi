{# templates/admin/my-custom-page.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Collect7{% endblock %}
{% block page_actions %}
    <a class="btn btn-primary" href="/admin">Some Action</a>
{% endblock %}

{% block main %}
    <div class="row">
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4 ">
            <div class="card  border-info bg-dark shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs  text-info text-uppercase mb-2">
                                Collections
                            </div>
                            <div class="h3 mb-1 text-white">{{ collections }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-trend-up fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4 ">
            <div class="card  border-info bg-dark shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs  text-info text-uppercase mb-2">
                                Cards
                            </div>
                            <div class="h5 mb-1 text-white">150 Transaction</div>
                            <div class="h5 mb-0 text-white">{{ cards }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-trend-up fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row"></div>
{% endblock %}